<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:opencv="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent" >

    <ImageView
        android:contentDescription="@string/company_logo"
        android:id="@+id/testright_logo_home"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:padding="25dp"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        opencv:layout_constraintEnd_toEndOf="parent"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toTopOf="@+id/app_logo_home" />

    <ImageView
        android:contentDescription="@string/app_logo"
        android:id="@+id/app_logo_home"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:src="@drawable/watertag"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintEnd_toEndOf="parent"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_camera"
        opencv:cornerRadius="100dp"
        android:paddingHorizontal="25dp"
        android:layout_marginBottom="5dp"
        opencv:layout_constraintBottom_toBottomOf="@+id/app_logo_home"
        opencv:layout_constraintEnd_toEndOf="parent"
        opencv:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>